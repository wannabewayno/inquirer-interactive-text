{
  "name": "inquirer-interactive-text",
  "version": "0.1.0",
  "description": "A framework for building interactive text interfaces with navigable fields and inline editing for CLI applications",
  "main": "./dist/commonjs/index.js",
  "types": "./dist/commonjs/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "author": {
    "name": "wayne griffiths",
    "email": "wayne.c.griffiths@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/wannabewayno/inquirer-interactive-text#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wannabewayno/inquirer-interactive-text.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/bun": "^1.2.17",
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.3",
    "chai": "^5.2.0",
    "chai-as-promised": "^8.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "mocha": "^11.6.0",
    "tshy": "^3.0.2",
    "tsx": "^4.20.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push origin --follow-tags",
    "prepare": "husky",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "tsc --noEmit --skipLibCheck",
    "test": "npx mocha test",
    "test:parallel": "npx mocha test --parallel",
    "build": "tshy"
  },
  "tshy": {
    "exclude": [
      "src/**/*.test.ts"
    ],
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "npm run format --",
      "npm run lint --"
    ]
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "module": "./dist/esm/index.js",
  "keywords": [
    "inquirer",
    "interactive",
    "text",
    "cli",
    "prompt",
    "terminal",
    "navigation",
    "form",
    "framework"
  ],
  "dependencies": {
    "@inquirer/core": "^10.2.0",
    "@inquirer/figures": "^1.0.13",
    "ansi-escapes": "^7.0.0",
    "yoctocolors": "^2.1.2"
  }
}
